<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button (Non Style)" />

            <Button
                style="@style/App.Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                style="@style/App.Widget.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary" />

            <Button
                style="@style/App.Widget.Button.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <Button
                        style="@style/App.Widget.UnelevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                    <Button
                        style="@style/App.Widget.UnelevatedButton.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary" />

                    <Button
                        style="@style/App.Widget.UnelevatedButton.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secondary" />

                    <Button
                        style="@style/App.Widget.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                    <Button
                        style="@style/App.Widget.OutlinedButton.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary" />

                    <Button
                        style="@style/App.Widget.OutlinedButton.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secondary" />

                    <Button
                        style="@style/App.Widget.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                    <Button
                        style="@style/App.Widget.TextButton.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary" />

                    <Button
                        style="@style/App.Widget.TextButton.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>